<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="300dp"
    android:background="@drawable/courner_round_bankground"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/upper_courner"
        android:gravity="center" >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/logo_small_old" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/cvv0"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/cvv1" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center" >



        <Button
            android:id="@+id/btn_cvv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_custom_blue"
            android:gravity="center"
            android:text="Close"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>