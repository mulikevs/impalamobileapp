<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="150dp"
    android:id="@+id/hide"
    android:background="@drawable/courner_round_bankground"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:background="@drawable/upper_courner"
        android:visibility="gone"
        android:gravity="center" >

        <ImageView
              android:layout_width="200dp"
                    android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/logo_small_old" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="25dp"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pleseenteryourpin"
                android:textColor="@color/blue_latter"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="25dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/typeyournewpin"
                android:textColor="@color/blue_latter"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:gravity="center" >

            <EditText
                android:id="@+id/active_pin_et"
                style="@style/font_my_font"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_custom"
                android:hint="@string/digit"
                android:paddingLeft="@dimen/ten"
                android:textColor="@color/blue_latter"
                android:inputType="numberPassword"
                android:textColorHint="@color/gry_text" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/active_confirm_pin1"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/verify" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/active_confirm_pin"
            android:layout_centerHorizontal="true"
            android:text="@string/confirm"
            android:textColor="@color/blue_latter" />

    </RelativeLayout>

</LinearLayout>