<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="5" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_trnsc_histry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/driver" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27 Jun,2015 9.30 AM"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_trnsc_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eWalledTopup"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_recipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipient: Mwambeke"
                android:layout_marginTop="3dp"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tv_trnsc_ref_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ref ID # 548654856"
                android:layout_marginTop="3dp"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_trnsc_txn_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Txn Code # 548654856"
                android:layout_marginTop="3dp"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:weightSum="1.4" >

            <TextView
                android:id="@+id/tv_trnsc_txn_amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:gravity="right|top"
                android:text="$175.00"
                android:textColor="@color/blue_latter"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Queued"
                android:layout_marginRight="5dp"
                android:layout_gravity="right|end"
                android:textSize="11sp" />
            <ProgressBar
                android:id="@+id/status_progress"
                android:layout_width="100dp"
                android:layout_gravity="right|end"
                android:layout_height="wrap_content"
                style="@style/CustomProgressBar"
                android:layout_marginRight="5dp"
                android:gravity="right|bottom">
            </ProgressBar>

            <TextView
                android:id="@+id/tv_trnsc_txn_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:gravity="right"
                android:text="SUCCESS"
                android:textSize="16sp"
                android:textColor="@color/blue_latter"
                android:visibility="gone"/>
        </LinearLayout>

       
    </LinearLayout>

    
   

</LinearLayout>