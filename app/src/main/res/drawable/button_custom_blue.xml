<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <layer-list >
            <item >
		        <shape android:shape="rectangle" >
		            <solid android:color="@color/blue_latter" />
		            <padding 
		                android:bottom="4dp"/>
		            <corners
		                android:topLeftRadius="7dp"
		                android:topRightRadius="7dp"
		                android:bottomLeftRadius="5dp"
		                android:bottomRightRadius="5dp"  />
		        </shape>
    		</item>
    
		    <item >
		        <shape android:shape="rectangle" >
		            <solid android:color="@color/blue_latter" />
		            <corners
		                android:topLeftRadius="5dp"
		                android:topRightRadius="5dp"  />
		            <padding 
		                android:left="10dp"
		                android:right="10dp"
		                android:top="4dp"
		                android:bottom="4dp"/>
		        </shape>
		    </item>
        </layer-list>
    </item>
    
    <item>
        <layer-list >
            <item >
		        <shape android:shape="rectangle" >
		            <solid android:color="#0f5380" />
		            <padding 
		                android:bottom="4dp"/>
		            <corners
		                android:topLeftRadius="7dp"
		                android:topRightRadius="7dp"
		                android:bottomLeftRadius="5dp"
		                android:bottomRightRadius="5dp"  />
		        </shape>
    		</item>
    
		    <item >
		        <shape android:shape="rectangle" >
		            <solid android:color="@color/blue_latter" />
		            <corners
		                android:topLeftRadius="5dp"
		                android:topRightRadius="5dp"  />
		            <padding 
		                android:left="10dp"
		                android:right="10dp"
		                android:top="4dp"
		                android:bottom="4dp"/>
		        </shape>
		    </item>
        </layer-list>
    </item>

</selector>